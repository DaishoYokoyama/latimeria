---
interface Props {
  id: string;
  title: string;
  alt?: boolean;
}

const { id, title, alt = false } = Astro.props;
---

<section id={id} class:list={["min-h-svh flex flex-col items-center justify-center px-4 py-20 md:py-32", alt ? "bg-canvas-alt" : "bg-canvas"]}>
  <h2 class="text-2xl font-bold text-heading md:text-4xl">{title}</h2>
  <p class="mt-4 text-body-secondary">Coming soon...</p>
</section>
