---
import { Image } from 'astro:assets';
import logo from '../assets/01logo.png';
import heroBg from '../assets/hero-bg.png';

interface Props {}
---

<section id="hero" class="relative min-h-svh flex items-center justify-center overflow-hidden">
  <Image
    src={heroBg}
    alt=""
    class="absolute inset-0 h-full w-full object-cover"
    loading="eager"
    widths={[640, 1024, 1920]}
    sizes="100vw"
  />

  <div class="absolute inset-0 bg-linear-to-b from-abyss/70 via-transparent to-abyss"></div>

  <div class="relative z-10 flex flex-col items-center">
    <h1 class="sr-only">Latimeria</h1>
    <Image
      src={logo}
      alt="Latimeria ラティメリア"
      class="w-48 md:w-64 lg:w-80 h-auto drop-shadow-[0_0_40px_rgba(8,145,178,0.3)]"
    />
  </div>
</section>
